<h1>Main Entrees Menue</h1>
<div class="row">
<% @kabobs.each do |kabob| %>
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <img src="<%= kabob.image %>">
      <div class="caption">
        <h3><%= kabob.name %></h3>
        <h3>Cost: $<%= kabob.cost %></h3>
        <%= link_to "More Info", kabob, class: "btn btn-default" %>
      </div>
    </div>
  </div>
  <% end %>
</div>

<br>

